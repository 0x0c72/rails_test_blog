<h1>Listing Articles</h1>
<%= link_to 'New article', new_article_path %>
	<% if @articles.size == 0 %>
                <p><em>No Articles Found </em></p>
        <% else @articles.each do |article| %>

		<table>
			<tr>
				<th>Title</th>
				<th>Text</th>
				<th colspan="2"></th>
			</tr>
		
			<tr>
				<td><%= article.title %></td>
				<td><%= article.text %></td>
				<td><%= link_to 'Show', 
article_path(article) %></td>
				<td><%= link_to 'Edit', 
edit_article_path(article) %></td>
				<td><%= link_to 'Destroy', 
article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
		</table>
	<% end %>
